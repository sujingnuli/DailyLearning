<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="layout_top">
        <span class="web_title">Music Store</span>
        <span class="login_span">
           @Html.ActionLink("Home","../StoreManager/Index")|
           @Html.ActionLink("Store","../Store/Index")|
           @Html.ActionLink("Cart(0)","../Cart/Index")|
           @Html.ActionLink("登录","/Home/Login")|
           @Html.ActionLink("注册","/Home/Register")
           
        </span>
    </div>
    <div class="layout_title">
        @Html.Action("Menu","Home")
    </div>
    <div class="Inner_div">
        <div class="Inner_div_left">
           @Html.Action("Genres","Home")
        </div>
        <div class="Inner_div_right">
            @RenderBody()
        </div>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
   
</body>
</html>
